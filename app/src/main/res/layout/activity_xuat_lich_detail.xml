<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.XuatLichDetail">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/lavender"
        android:elevation="4dp"
        android:title="Thông Tin Lịch Giảng Viên"
        android:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông Tin Lịch Giảng Viên"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Thông tin Họ và Tên -->
    <TextView
        android:id="@+id/tvLabelHoTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Họ và Tên:"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvHoTen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nguyễn Văn A"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/tvLabelHoTen"
        app:layout_constraintStart_toEndOf="@id/tvLabelHoTen"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Thông tin Giới Tính -->
    <TextView
        android:id="@+id/tvLabelGioiTinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giới Tính:"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvHoTen"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvGioiTinh"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nam"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/tvLabelGioiTinh"
        app:layout_constraintStart_toEndOf="@id/tvLabelGioiTinh"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Thông tin Số Điện Thoại -->
    <TextView
        android:id="@+id/tvLabelSoDienThoai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số Điện Thoại:"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvGioiTinh"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvSoDienThoai"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0123456789"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/tvLabelSoDienThoai"
        app:layout_constraintStart_toEndOf="@id/tvLabelSoDienThoai"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Thông tin Môn Học -->
    <TextView
        android:id="@+id/tvLabelMonHoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Môn Học:"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvSoDienThoai"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvMonHoc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lập trình Android"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/tvLabelMonHoc"
        app:layout_constraintStart_toEndOf="@id/tvLabelMonHoc"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Thông tin Lớp Học -->
    <TextView
        android:id="@+id/tvLabelLopHoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lớp Học:"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvMonHoc"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvLopHoc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lớp A1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/tvLabelLopHoc"
        app:layout_constraintStart_toEndOf="@id/tvLabelLopHoc"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Thông tin Thứ -->
    <TextView
        android:id="@+id/tvLabelThu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thứ:"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvLopHoc"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvThu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Thứ 2"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/tvLabelThu"
        app:layout_constraintStart_toEndOf="@id/tvLabelThu"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
